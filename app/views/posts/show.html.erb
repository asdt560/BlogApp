<!DOCTYPE html>
<html>
  <head></head>
  <body>
    <div class='container postscreen'>
      <div class='postcard'>
        <h2><%= @post.title %> by <%= @author.name %></h2>
        <p class='count'>
          Comments: <%= @post.comments_counter != nil ? @post.comments_counter : '0' %>
          Likes: <%= @post.likes_counter != nil ? @post.likes_counter : '0' %>
        </p>
        <p><%= @post.text %></p>
      </div>
      <% if @comments.length > 0 %>
        <div class='commentscard'>
          <% @comments.includes(:author).each do |comment| %>
            <p class='comment'><%= comment.author.name %>: <%= comment.text %></p>
          <% end %>
        </div>
      <% end %>
      <%= render 'comments/newcomment' %>
    </div>
  </body>
</html>